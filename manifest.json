{
    "manifest_version": 2,
    "name": "Toggle Color",
    "description": "Toggle between 3 colors (red, green, and blue)",
    "version": "1.0",
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["change_color.js"]
      }
    ],
    "options_page": "options.html",
    "permissions": [
      "storage"
    ]
  }
  